{% extends 'app/pages/security/template.html.twig' %}

{% block title %}Connexion à son espace Logilink{% endblock %}

{% block main_content %}
<div class="page-default">
    <div class="login-page">
        <div class="col-1">
            <div class="title-page">
                <h1><em>Mon espace</em> Logilink</h1>
                <p>Entrez votre identifiant et mot de passe ci-dessous pour accéder à votre espace</p>
            </div>

            <div class="content">
                <form action="{{ path('app_login') }}" method="post" class="form-login">
                    {% if error %}
                        <div class="alert alert-danger">
                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    {% endif %}

                    <div class="line">
                        <div class="form-group">
                            <label for="username">
                                <span class="icon-user"></span>
                                <span>Identifiant</span>
                            </label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus/>
                        </div>
                    </div>

                    <div class="line">
                        <div class="form-group">
                            <label for="password">
                                <span class="icon-padlock"></span>
                                <span>Mot de passe</span>
                            </label>
                            <input type="password" name="_password" id="password" required />
                            <div class="input-show"><span class="icon-vision" id="password-icon"></span></div>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <input type="hidden" name="_target_path" value="{{ path('app_logged') }}"/>

                    <div class="line">
                        <div id="forget"></div>
                    </div>

                    <div class="line-buttons">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-2">
            <div class="image">
                <img src="{{ asset('build/app/images/login-page.jpg') }}" alt="formulaire connexion">
            </div>
        </div>
    </div>
</div>
{% endblock %}
